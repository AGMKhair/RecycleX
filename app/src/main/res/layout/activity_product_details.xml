<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dotLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:layout_weight=".5"
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_weight=".5"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--       <Button
                       android:text="This is buttom"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/defult_menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/product_name_detais_TVId"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorGreen"
                android:text="ACI Pure Salt (1 kg)"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:paddingRight="20dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".1"
                android:text="$16"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:gravity="center_vertical"
                android:id="@+id/product_price_detais_TVId"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

<!--            <ImageView

                android:layout_weight=".18"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/defult_menu_icon"/>-->

            <ImageView
                android:layout_weight=".3"
                android:id="@+id/item_minus_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/minus"/>

            <TextView
                android:textAlignment="center"
                android:layout_weight=".3"
                android:text="0"
                android:gravity="center_vertical"
                android:textColor="@color/colorGreen"
                android:layout_gravity="center_vertical"
                android:id="@+id/item_select_quantity_show_main_page_TVid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/item_plus_id"
                android:gravity="right"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plus"/>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_description_TVId"
                android:textColor="@color/colorBlack"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_velue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>


    </LinearLayout>

</LinearLayout>

