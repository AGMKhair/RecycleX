<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <icon

        </LinearLayout>
     -->

    <TextView
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Update Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/address"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:gravity="end" />
        <EditText
            android:id="@+id/update_name_id"
            android:layout_weight=".2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Mail : "
            android:gravity="end" />
        <EditText
            android:id="@+id/update_mail_id"
            android:layout_weight=".2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:gravity="end" />
        <EditText
            android:id="@+id/update_phone_id"
            android:layout_weight=".2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Area : "
            android:gravity="end" />
        <EditText
            android:id="@+id/update_area_id"
            android:layout_weight=".2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:gravity="end" />
        <EditText
            android:layout_weight=".2"
            android:padding="5dp"
            android:id="@+id/update_address_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>

    <Button
        android:id="@+id/update_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        />


</LinearLayout>